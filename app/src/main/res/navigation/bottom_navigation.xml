<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feed_screen">

    <fragment
        android:id="@+id/feed_screen"
        android:name="com.basecamp.android.core.main.feed.FeedScreen"
        android:label="FeedScreen"
        tools:layout="@layout/screen_feed">
        <action
            android:id="@+id/action_feed_screen_to_addnew_screen"
            app:destination="@id/addnew_screen" />

        <action
            android:id="@+id/action_feed_screen_to_newspreview_screen"
            app:destination="@id/newspreview_screen" />
    </fragment>

    <fragment
        android:id="@+id/addnew_screen"
        android:name="com.basecamp.android.core.main.feed.add.AddNewScreen"
        android:label="AddNewScreen"
        tools:layout="@layout/screen_addnew">

        <argument
            android:name="news_id"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_addnew_screen_to_cameragallery_dialog"
            app:destination="@id/cameragallery_dialog" />
    </fragment>



    <fragment
        android:id="@+id/newspreview_screen"
        android:name="com.basecamp.android.core.main.feed.preview.NewsPreviewScreen"
        android:label="NewsPreviewScreen"
        tools:layout="@layout/screen_newspreview">

        <argument
            android:name="news"
            app:argType="com.basecamp.android.domain.models.News"
            app:nullable="false" />
    </fragment>

    <fragment
        android:id="@+id/user_screen"
        android:name="com.basecamp.android.core.main.info.user.UserScreen"
        android:label="UserScreen"
        tools:layout="@layout/screen_profile">

        <argument
            android:name="user"
            app:argType="com.basecamp.android.domain.models.User"
            app:nullable="false" />
    </fragment>

    <fragment
        android:id="@+id/profile_screen"
        android:name="com.basecamp.android.core.main.profile.ProfileScreen"
        android:label="ProfileScreen"
        tools:layout="@layout/screen_profile">
        <action
            android:id="@+id/action_profile_screen_to_editprofile_dialog"
            app:destination="@id/editprofile_dialog" />
    </fragment>

    <fragment
        android:id="@+id/info_screen"
        android:name="com.basecamp.android.core.main.info.InfoScreen"
        android:label="InfoScreen"
        tools:layout="@layout/screen_info" >

        <action
            android:id="@+id/action_info_screen_to_addinfo_screen"
            app:destination="@id/addinfo_screen" />


        <action
            android:id="@+id/action_info_screen_to_participants_screen"
            app:destination="@id/participants_screen" />

        <action
            android:id="@+id/action_info_screen_to_families_screen"
            app:destination="@id/families_screen" />
    </fragment>


    <fragment
        android:id="@+id/addinfo_screen"
        android:name="com.basecamp.android.core.main.info.add.AddInfoScreen"
        android:label="AddInfoScreen"
        tools:layout="@layout/screen_addinfo">

        <argument
            android:name="news_id"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/participants_screen"
        android:name="com.basecamp.android.core.main.info.participants.ParticipantsScreen"
        android:label="ParticipantsScreen"
        tools:layout="@layout/screen_participants">
        <action
            android:id="@+id/action_participants_screen_to_user_screen"
            app:destination="@id/user_screen"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"/>
    </fragment>

    <fragment
        android:id="@+id/families_screen"
        android:name="com.basecamp.android.core.main.info.families.FamiliesScreen"
        android:label="FamiliesScreen"
        tools:layout="@layout/screen_families"/>

    <fragment
        android:id="@+id/editprofile_dialog"
        android:name="com.basecamp.android.core.main.profile.edit.EditProfileDialog"
        android:label="EditProfileDialog"
        tools:layout="@layout/dialog_editprofile">
        <action
            android:id="@+id/action_editprofile_dialog_to_cameragallery_dialog"
            app:destination="@id/cameragallery_dialog" />
    </fragment>

    <fragment
        android:id="@+id/cameragallery_dialog"
        android:name="com.basecamp.android.core.common.cameragallery.CameraGalleryDialog"
        android:label="CameraGalleryDialog"
        tools:layout="@layout/dialog_camera_gallery">

    </fragment>

</navigation>