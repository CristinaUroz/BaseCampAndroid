<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:animateLayoutChanges="true"
    android:paddingBottom="3dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/fragmentBackground">


        <ImageView
            android:id="@+id/view_user_item_list_picture"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_cartel_armando_guerra" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragmentBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_user_item_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingTop="22dp"
            android:paddingEnd="12dp"
            android:paddingBottom="22dp"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TITOL DE LA NOTICIA" />

        <TextView
            android:id="@+id/view_user_item_list_family"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:textColor="@color/disabledBackground"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            tools:text="TITOL DE LA NOTICIA" />

    </LinearLayout>

</LinearLayout>