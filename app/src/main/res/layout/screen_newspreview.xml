<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/screen_newspreview_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:textAlignment="center"
                tools:text="TITOL NOTICIA"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="32sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="32sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeTextType="uniform" />

            <LinearLayout
                android:id="@+id/screen_newspreview_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:padding="12dp"
                android:visibility="gone"
                android:background="@drawable/button_black_background"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/screen_newspreview_author_picture"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    tools:src="@drawable/ic_cartel_armando_guerra"/>

                <TextView
                    android:id="@+id/screen_newspreview_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    tools:text="Armando guerra"
                    app:autoSizeMaxTextSize="32sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

            <TextView
                android:id="@+id/screen_newspreview_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/disabledBackground"
                android:textSize="12sp"
                tools:text="Juliol"/>

            <TextView
                android:id="@+id/screen_newspreview_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                tools:text="TEXT NOTICIA" />


            <ImageView
                android:id="@+id/screen_newspreview_cover_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                tools:src="@drawable/newspapers"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>